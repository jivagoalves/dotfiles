[core]
	editor = vim
	excludesfile = /home/jivago/.gitignore
[merge]
	tool = vimdiff
[color]
	ui = auto
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[alias]
	co = checkout
	s = status -s
	l = log --branches --decorate --oneline
	b = branch
	d = diff
	adduntracked = !git add $(git ls-files -o --exclude-standard)
	cleanbranches = !git branch --merged | grep -v "\\*" | grep -v master | xargs -n 1 git branch -d
