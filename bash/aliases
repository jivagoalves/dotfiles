# Bash's aliases
function c() {
  clear
}

# Tmux's aliases
function t() {
  tmux
}
function tls() {
  tmux ls
}

# Bundle's aliases
function be() {
  bundle exec "$@"
}
function bs() {
  bundle show "$@"
}
function bu() {
  bundle update "$@"
}
function bake() {
  bundle exec rake "$@"
}
function cake() {
  bundle exec cap "$@"
}

# Zeus's aliases
function zake() {
  zeus rake "$@"
}

# Docker Compose's aliases
function dup() {
  docker-compose up -d "$@"
}
function dr() {
  docker-compose run --rm "$@"
}
function ds() {
  docker-compose start "$@"
}
function dps() {
  docker-compose ps "$@"
}
