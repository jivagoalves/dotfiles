# Bash's aliases
function c() {
  clear
}

# Tmux's aliases
function t() {
  tmux
}
function tls() {
  tmux ls
}

# Bundle's aliases
function be() {
  bundle exec "$@"
}
function bs() {
  bundle show "$@"
}
function bu() {
  bundle update "$@"
}
function bake() {
  bundle exec rake "$@"
}

# Zeus's aliases
function zake() {
  zeus rake "$@"
}
