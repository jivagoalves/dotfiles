# Bash's aliases
function c() {
  clear
}

# apt-get's aliases
function upgrade() {
  sudo apt-get update && sudo apt-get upgrade -y
}
function get() {
  sudo apt-get install -y "$@"
}

# Tmux's aliases
function t() {
  tmux
}
function tls() {
  tmux ls
}
function tattach() {
  tmux attach-session -t "$@"
}

# Tmuxinator's aliases
function mux() {
  tmuxinator "$@"
}

# Vim's aliases
function v() {
  gvim -v "$@"
}

# Bundle's aliases
function be() {
  bundle exec "$@"
}
function bs() {
  bundle show "$@"
}
function bu() {
  bundle update "$@"
}
function bake() {
  bundle exec rake "$@"
}
function cake() {
  bundle exec cap "$@"
}

# Zeus's aliases
function zake() {
  zeus rake "$@"
}

# Docker Compose's aliases
function dkc() {
  docker-compose "$@"
}
function dup() {
  docker-compose up -d "$@"
}
function dr() {
  docker-compose run --rm "$@"
}
function ds() {
  docker-compose start "$@"
}
function dps() {
  docker-compose ps "$@"
}
