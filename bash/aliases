# Bash's aliases
function c() {
  clear
}

# apt-get's aliases
function upgrade() {
  sudo apt-get update && sudo apt-get upgrade -y
}
function get() {
  sudo apt-get install -y "$@"
}

# Tmux's aliases
function t() {
  tmux
}
function tls() {
  tmux ls
}
function tattach() {
  tmux attach-session -t "$@"
}

# Tmuxinator's aliases
function mx() {
  tmuxinator "$@"
}

# Vim's aliases
function v() {
  if which gvim; then
    gvim -v "$@"
  elif which nvim; then
    nvim "$@"
  else
    vim "$@"
  fi
}

# Bundle's aliases
function be() {
  bundle exec "$@"
}
function bs() {
  bundle show "$@"
}
function bu() {
  bundle update "$@"
}
function bake() {
  bundle exec rake "$@"
}
function cake() {
  bundle exec cap "$@"
}

# Zeus's aliases
function zake() {
  zeus rake "$@"
}

# Docker Compose's aliases
function dkc() {
  docker-compose "$@"
}
function dup() {
  docker-compose "$@" up
}
function drun() {
  docker-compose run --rm "$@"
}
function dstart() {
  docker-compose start "$@"
}
function dps() {
  docker ps "$@"
}
function dexec() {
  docker exec -it "$@"
}
function dshell() {
  docker exec -it "$@" /bin/bash
}

# Maven's aliases
function mrun() {
  mvn grails:run-app -Dgrails.env=${GRAILS_ENV:-development} -Dserver.port=${SERVER_PORT:-8200} "$@"
}
function mpkg() {
  env MAVEN_OPTS="-Xmx1g -XX:MaxPermSize=512m" mvn clean package -Dmaven.test.skip=true "$@"
}
function mtest() {
  env MAVEN_OPTS="-Xmx1g -XX:MaxPermSize=512m" mvn test "$@"
}
function mclean() {
  env MAVEN_OPTS="-Xmx1g -XX:MaxPermSize=512m" mvn clean "$@"
}
function minstall() {
  env MAVEN_OPTS="-Xmx1g -XX:MaxPermSize=512m" mvn grails:install-plugin -DpluginName="$@"
}

# Crystal's aliases
function cr() {
  crystal "$@"
}

# Serverless Frameworks's aliases
function srv() {
  serverless "$@"
}
